<!-- Photos Section -->
<section id="photos" class="photos-section section-padding">
  <div class="container-fluid">
    <h2 class="section-title wow fadeInUp">Photos</h2>
    <div class="row">
      <div class="grid">
        <% for (var i=0; i < site.data.instagram.length; i++) { var item =
        site.data.instagram[i]; %>
        <figure class="photo-item">
          <img src="<%= item.media_url %>" alt="" />
          <figcaption>
            <div class="caption-content">
              <a
                href="<%= item.media_utl %>"
                class="single_image"
                data-src="#instagram-<%= item.id %>"
                data-title="<%= item.caption %> - <%= item.timestampFormatted %>"
                data-link="<%= item.permalink %>"
                data-fancybox="gallery"
              >
                <% if (item.media_type === "VIDEO") { %>
                <i class="fa fa-video-camera"></i>
                <% } else { %>
                <i class="fa fa-picture-o"></i>
                <% } %>
                <p><%= item.caption %></p>
                <p><%= item.timestampFormatted %></p></a
              >
            </div>
          </figcaption>
          <div class="instagram-embed" id="instagram-<%= item.id %>">
            <%- item.embedHtml %>
          </div>
        </figure>
        <% } %>
      </div>
    </div>
    <div class="row photos-links">
      <div class="col-sm-4 col-sm-offset-4 text-center">
        <a
          class="btn btn-primary btn-lg"
          href="https://www.instagram.com/churchs19/"
          target="_blank"
          ><i class="fa fa-instagram"></i>View More on Instagram</a
        ><br />
        <a href="http://wwwazure.s-church.net/PhotoAlbum" target="_blank"
          ><i class="fa fa-picture-o"></i>Photo Archive</a
        >
      </div>
    </div>
  </div>
</section>
<!-- End Photos Section -->
