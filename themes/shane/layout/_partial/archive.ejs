<% if (pagination == 2){ %>
  <% page.posts.each(function(post){ %>
    <%- partial('article', {post: post, index: true}) %>
  <% }) %>
<% } else { %>
  <% var last; %>
  <% page.posts.each(function(post, i){ %>
    <% var archiveDate = post.date.format("MMMM YYYY"); %>
    <% if (last != archiveDate){ %>
      <% if (last != null){ %>
        </div></section>
      <% } %>
      <% last = archiveDate; %>
      <section class="archives-wrap">
        <div class="archive-date-wrap">
            <a href="<%- url_for(config.archive_dir + '/' + post.date.format('YYYY') + '/' + post.date.format('MM')) %>" class="archive-year"><h2><%= archiveDate %></h2></a>
        </div>
        <div class="archives">
    <% } %>
    <%- partial('archive-post', {post: post, even: i % 2 == 0}) %>
  <% }) %>
  <% if (page.posts.length){ %>
    </div></section>
  <% } %>
<% } %>
<% if (page.total > 1){ %>
  <div id="page-nav">
    <%- bs_paginator({
      prev_text: '<i class="fa fa-chevron-left"></i> Prev',
      next_text: 'Next <i class="fa fa-chevron-right"></i>'
    }) %>
  </div>
<% } %>
